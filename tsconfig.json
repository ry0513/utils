{
    "compilerOptions": {
        "outDir": "./lib",
        "module": "ESNext",
        "target": "ESNext",
        "declaration": true,
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}